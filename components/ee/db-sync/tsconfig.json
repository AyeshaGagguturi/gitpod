{
    "compilerOptions": {
        "strict": true,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2021",
        "lib": [
            "es2021"
        ],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "lib",
        "useUnknownInCatchVariables": false
    },
    "include": [
        "src"
    ]
}
