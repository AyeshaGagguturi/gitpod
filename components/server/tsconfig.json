{
    "compilerOptions": {
        "outDir": "dist",
        "experimentalDecorators": true,
        "lib": [
            "es2021",
        ],
        "strict": true,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2021",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false,
        "typeRoots": [
            "../../node_modules/@types",
            "./ee/src/typings"
        ]
    },
    "include": [
        "src",
        "ee/src"
    ]
}
